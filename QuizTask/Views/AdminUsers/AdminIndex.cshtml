@model QuizTask.Models.ViewModel.AdminIndexVM
@{
    ViewData["Title"] = "AdminIndex";
    Layout = "_LayoutAdmin";
}

<style>
    .round {
        border-radius: 4rem;
    }

    .th {
        background-color: #4facfe !important;
        opacity: 1 !important;
        color: white;
    }

    .table thead th {
        color: white;
        border-top: none;
        vertical-align: middle;
        font-size: .8rem;
        letter-spacing: 1px;
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #4facfe !important;
        opacity: 1 !important;
        BACKGROUND-COLOR: #4facfe;
        /* COLOR: WHITE; */
        color: white;
    }


    .table.dataTable thead .sorting:before, .table.dataTable thead .sorting:after, .table.dataTable thead .sorting_asc:before, .table.dataTable thead .sorting_asc:after, .table.dataTable thead .sorting_desc:before, .table.dataTable thead .sorting_desc:after, .table.dataTable thead .sorting_desc_disabled:before, .table.dataTable thead .sorting_desc_disabled:after {
        font-family: "boxicons";
        color: white;
    }

    #SvgjsG1504 {
        opacity: 0;
        color: white;
        background-color: white;
    }

    .apexcharts-datalabels-group {
        opacity: 0;
        color: white;
        background-color: white;
    }
</style>
<div class="vertical-layout vertical-menu-modern 2-columns  navbar-sticky footer-static  " data-open="click" data-menu="vertical-menu-modern" data-col="2-columns">

    <section id="dashboard-ecommerce">
        <div class="row">
            <!--------------------------Booking------------------------>
            <div class="col-xl-3 col-md-12 col-sm-12">
                <div class="row h-100">
                    <!-- Conversion Chart Starts-->
                    <div class="col-xl-12 col-md-6 col-12">
                        <div class="card height-80-per" style="cursor:pointer" onclick="window.open('/ServiceBookings/Index')">
                            <div class="card-header d-flex justify-content-between pb-xl-0 pt-xl-1">
                                <div class="conversion-title">
                                    <h3 class="card-title">Candidate</h3>
                                </div>
                                <div class="conversion-rate">
                                    <h5>@Model.CandidateCount<i class="bx bx-trending-up text-success font-size-small align-middle mr-25"></i></h5>
                                </div>
                            </div>
                            <div class="card-body text-center mt-1">
                                <div id="bar-negative-chart-admin" class="negative-bar-chart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--------------------------Agency------------------------>

            <div class="col-xl-3 col-md-12 col-sm-12">
                <div class="row h-100">
                    <div class="col-xl-12 col-md-6 col-12">
                        <div class="card height-80-per" style="cursor:pointer" onclick="window.open('/Agencies/Index')">
                            <div class="card-header d-flex justify-content-between pb-xl-0 pt-xl-1">
                                <div class="conversion-title">
                                    <h3 class="card-title">AttemtQuiz</h3>
                                </div>
                                <div class="conversion-rate">
                                    <h5>@Model.AttemptQuizCount<i class="bx bx-trending-up text-success font-size-small align-middle mr-25"></i></h5>
                                </div>
                            </div>
                            <div class="card-body text-right ">
                                <div id="registration-chart-admin"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--------------------------Revenue------------------------>

            <div class="col-xl-3 col-md-12 col-sm-12">
                <div class="row h-100">
                    <div class="col-xl-12 col-md-6 col-12">
                        <div class="card height-80-per" style="cursor:pointer" onclick="window.open('/ServiceBookings/Index')">
                            <div class="card-header d-flex justify-content-between pb-xl-0 pt-xl-1">
                                <div class="conversion-title">
                                    <h3 class="card-title">TestLink</h3>
                                </div>
                                <div class="conversion-rate">
                                    <h5>@Model.TestLinkCount<i class="bx bx-trending-up text-success font-size-small align-middle mr-25"></i></h5>
                                </div>
                            </div>
                            <div class="card-body text-right ">
                                <div id="success-line-chart-admin"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--------------------------Visitor------------------------>

            <div class="col-xl-3 col-md-12 col-sm-12">
                <div class="row h-100">
                    <div class="col-xl-12 col-md-6 col-12">
                        <div class="card height-80-per" style="cursor:pointer" onclick="window.open('/ServiceBookings/Index')">
                            <div class="card-header d-flex justify-content-between pb-xl-0 pt-xl-1">
                                <div class="conversion-title">
                                    <h3 class="card-title">Send E-Mail</h3>
                                </div>
                                <div class="conversion-rate">
                                    <h5>@Model.EmailCount<i class="bx bx-trending-up text-success font-size-small align-middle mr-25"></i></h5>
                                </div>
                            </div>
                            <div class="card-body text-right ">
                                <div id="growth-Chart-admin"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--------------------------New Candidate------------------------>

        <div class="row" id="table-head">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="display: block;">
                        <div class="row">
                            <div class="col-md-10 col-10 text-md-left" style="padding-right: 0px;">
                                <h4 class="card-title">Recent Candidate</h4>
                            </div>
                            <div class="col-md-2 col-2 text-md-right" style="padding-right: 0px;">
                                <button class="btn btn-sm btn-primary glow" onclick="window.open('/AdminUsers/Canditate')">View All</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>
                            Following is the list of Employee from all over  <code class="highlighter-rouge">Quiz</code>
                        </p>
                    </div>
                    <!-- table head dark -->
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead style="width:100%">
                                <tr>
                                    <th>Candidate Name</th>
                                    <th>Careel level</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Gender</th>
                                    <th>Pic</th>
                                    <th>Status</th>
                                </tr>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.candidateDetails)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.CareerLevel.CareerName</td>
                                        <td>@item.Candidate_Email</td>
                                        <td>@item.Mobile_No</td>
                                        <td>@item.Gender</td>
                                        <td><img class="round" src="/images/@item.Pic" alt="avatar" height="50" width="50"></td>

                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                @Html.Raw("Active")
                                            }
                                            else
                                            {
                                                @Html.Raw("Deactive")
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <!--------------------------New Test Link------------------------>

        <div class="row" id="table-head">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="display: block;">
                        <div class="row">
                            <div class="col-md-10 col-10 text-md-left" style="padding-right: 0px;">
                                <h4 class="card-title">Recent Test Link</h4>
                            </div>
                            <div class="col-md-2 col-2 text-md-right" style="padding-right: 0px;">
                                <button class="btn btn-sm btn-primary glow" onclick="window.open('/AdminUsers/AllTestLink')">View All</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>
                            Following is the list of Employee message who need support from all over  <code class="highlighter-rouge">Quiz</code>
                        </p>
                    </div>
                    <!-- table head dark -->
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead style="width:100%">
                                <tr>
                                    <th>Candidate Name</th>
                                    <th>Candidate Link</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.testLinks)
                                {
                                    <tr>
                                        <td>@item.CandidateDetail.Name</td>
                                        <td><a href="@item.Candidate_TestLink" class="nav-link">https://localhost:7283/startQuiz?candidate="@item.CandidateDetail.Name"</a></td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>@item.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </di



        <!--------------------------New  Quiz------------------------>


        <div class="row" id="table-head">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="display: block;">
                        <div class="row">
                            <div class="col-md-10 col-10 text-md-left" style="padding-right: 0px;">
                                <h4 class="card-title">Quiz Questions</h4>
                            </div>
                            <div class="col-md-2 col-2 text-md-right" style="padding-right: 0px;">
                                    <button class="btn btn-sm btn-primary glow" onclick="window.open('/AdminUsers/AllQuizAns')">View All</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>
                            Following is the list of Chat from All over  <code class="highlighter-rouge">Quiz</code>
                        </p>
                    </div>
                    <!-- table head dark -->
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead style="width:100%">
                                <tr>
                                    <th>QuizQno</th>
                                    <th>Question</th>
                                    <th>Answer</th>
                                    <th>Option</th>
                                    <th>CareerLevel</th>
                                    <th>QuizStatus</th>
                                    <th>QuizDate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.quizQuestionAnswers)
                                {
                                    <tr>
                                        <td>@item.QuizQno</td>
                                        <td>@item.Question</td>
                                        <td>@item.Answer</td>
                                        <td>
                                            <ul>
                                                @foreach (var option in item.QOptions)
                                                {
                                                    <li>@option.Options @* (Option #@option.OptionNo) *@</li>
                                                }
                                            </ul>
                                        </td>
                                        <td>@item.CareerLevel?.CareerName</td>
                                        <td>@item.QuizDate</td>

                                        <td>
                                            @if (item.QuizStatus == true)
                                            {
                                                @Html.Raw("Active")
                                            }
                                            else
                                            {
                                                @Html.Raw("Deactive")
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </section>
</div>
